<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_24px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textTitleCertVerify"
        android:layout_marginTop="30dp" />

    <!--    수료증 텍스트 중심으로 정렬-->
    <TextView
        android:id="@+id/textTitleCertVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수료증 NFT 인증"
        style="@style/heading1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textTitleCertVerify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCloseCertVerify">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수료자"
            style="@style/heading3"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textNameStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이한나"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수료자 코드"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

<!--        마스킹 처리 필요-->
        <TextView
            android:id="@+id/textCodeStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asffasdfasdfasdf"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="데이터"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의명"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textNameLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQLD 미리보기"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강사명"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textNameLecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김좜비"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강사 코드"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textCodeLecturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asffasdfasdfasdf"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수료 일자"
            style="@style/heading3"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-01-01"
            style="@style/body3"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true" />




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCloseCertVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수료증 발급받기"
        android:textColor="@color/white"
        android:padding="15dp"
        style="@style/heading4"
        android:background="@drawable/bg_radius_20"
        android:backgroundTint="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>