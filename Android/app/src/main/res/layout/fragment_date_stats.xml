<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDateStatsRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- 상단에 날짜 선택 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- 예: 2024 / 3월 / 20일 -->
        <TextView
            android:id="@+id/tvDateSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="2024  3월  20일"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 막대 그래프 영역 (실제로는 라이브러리나 CustomView 사용 가능) -->
    <ImageView
        android:id="@+id/chartImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bg_category_certificate" />

    <!-- 등록한 수강자 수, 수익 등 표시 -->
    <TextView
        android:id="@+id/tvStudentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="등록한 수강자 수: 10"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="수익: 100,000"
        android:textSize="14sp" />

</LinearLayout>
